<Page x:Class="TrainSchedule.LogInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Log In">

    <Grid>
        <!-- Kontener z białym tłem i cieniem -->
        <Border Background="White" 
                CornerRadius="15" 
                Padding="30"
                Width="420" 
                Height="520"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,75,0,0">
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                                  BlurRadius="20" 
                                  ShadowDepth="10" 
                                  Opacity="0.3"/>
            </Border.Effect>

            <!-- Grid jako jedyne dziecko Border -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Tytuł wewnątrz Border -->
                <Label Content="Log in" 
                       HorizontalAlignment="Center" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="#1976D2"
                       Margin="0,0,0,20" 
                       Grid.Row="0"/>

                <!-- StackPanel wewnątrz Grid -->
                <StackPanel Grid.Row="1">
                    <!-- Label i TextBox dla Email -->
                    <Label Content="Email" 
                           FontSize="25" 
                           FontWeight="Bold"
                           Width="300" 
                           Margin="0,10,0,0"/>
                    <TextBox Name="EmailTextBox" Width="300" 
                             FontSize="20" 
                             Margin="0,10,0,0"
                             Text="example@email.com"
                             GotFocus="EmailBox_GotFocus" 
                             LostFocus="EmailBox_LostFocus"
                             Foreground="Gray"/>

                    <!-- Label i PasswordBox dla hasła -->
                    <Label Content="Password" 
                           FontSize="25" 
                           FontWeight="Bold"
                           Width="300" 
                           Margin="0,30,0,0"/>
                    <PasswordBox Name="PasswordBox" Width="300" 
                                 FontSize="20" 
                                 Margin="0,10,0,0"/>

                    <!-- Przycisk logowania -->
                    <Button Content="Log In" 
                            Width="300" 
                            Height="50" 
                            Background="#1976D2" 
                            Foreground="White" 
                            FontSize="20" 
                            Margin="0,30,0,0"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="OnLoginClick"
                            />

                    <!-- Link do rejestracji -->
                    <TextBlock HorizontalAlignment="Center" 
                               Margin="0,20,0,0" 
                               FontSize="16">
                        <Run Text="Don't have an account? "/>
                        <Run Text="Register here" 
                             Foreground="#1976D2" 
                             TextDecorations="Underline" 
                             Cursor="Hand"
                             MouseDown="GoToRegistrationPage"/>
                    </TextBlock>

                    <!-- TextBlock do wyświetlania błędów -->
                    <TextBlock Name="ErrorTextBlock" 
                               HorizontalAlignment="Center" 
                               Foreground="Red" 
                               FontSize="14" 
                               Margin="0,20,0,0" 
                               Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
