<Page x:Class="TrainSchedule.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Register">

    <Grid>
        <!-- Kontener z białym tłem i cieniem -->
        <Border Background="White" 
                CornerRadius="15" 
                Padding="30"
                Width="420" 
                MinHeight="520"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,75,0,0">
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                                  BlurRadius="20" 
                                  ShadowDepth="10" 
                                  Opacity="0.3"/>
            </Border.Effect>

            <!-- ScrollViewer umożliwiający przewijanie formularza -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Tytuł rejestracji -->
                    <Label Content="Register" 
                           HorizontalAlignment="Center" 
                           FontSize="36" 
                           FontWeight="Bold" 
                           Foreground="#1976D2"
                           Margin="0,0,0,20" 
                           Grid.Row="0"/>

                    <!-- StackPanel dla formularza rejestracyjnego -->
                    <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                        <!-- E-mail -->
                        <Label Content="Email" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Width="300" 
                               Margin="0,10,0,0"/>
                        <TextBox Name="EmailTextBox" Width="300" 
                                 FontSize="16" 
                                 Margin="0,10,0,0" 
                                 Foreground="Gray" 
                                 Text="example@email.com"
                                 GotFocus="EmailBox_GotFocus" 
                                 LostFocus="EmailBox_LostFocus"/>

                        <!-- Hasło -->
                        <Label Content="Password" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Width="300" 
                               Margin="0,30,0,0"/>
                        <PasswordBox Name="PasswordBox" Width="300" 
                                     FontSize="16" 
                                     Margin="0,10,0,0"/>

                        <!-- Potwierdzenie hasła -->
                        <Label Content="Confirm Password" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Width="300" 
                               Margin="0,30,0,0"/>
                        <PasswordBox Name="ConfirmPasswordBox" Width="300" 
                                     FontSize="16" 
                                     Margin="0,10,0,0"/>

                        <!-- Imię -->
                        <Label Content="First Name" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Width="300" 
                               Margin="0,30,0,0"/>
                        <TextBox Name="FirstNameTextBox" Width="300" 
                                 FontSize="16" 
                                 Margin="0,10,0,0" 
                                 Foreground="Gray" 
                                 Text="Example"
                                 GotFocus="FirstNameBox_GotFocus" 
                                 LostFocus="FirstNameBox_LostFocus"/>

                        <!-- Nazwisko -->
                        <Label Content="Last Name" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Width="300" 
                               Margin="0,30,0,0"/>
                        <TextBox Name="LastNameTextBox" Width="300" 
                                 FontSize="16" 
                                 Margin="0,10,0,0" 
                                 Foreground="Gray" 
                                 Text="Example"
                                 GotFocus="LastNameBox_GotFocus" 
                                 LostFocus="LastNameBox_LostFocus"/>

                        <!-- Numer telefonu -->
                        <Label Content="Phone Number" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Width="300" 
                               Margin="0,30,0,0"/>
                        <TextBox Name="PhoneNumberTextBox" Width="300" 
                                 FontSize="16" 
                                 Margin="0,10,0,0" 
                                 Foreground="Gray" 
                                 Text="111111111"
                                 GotFocus="PhoneNumberBox_GotFocus" 
                                 LostFocus="PhoneNumberBox_LostFocus"/>

                        <!-- Typ biletu -->
                        <Label Content="Ticket Type" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Width="300" 
                               Margin="0,30,0,0"/>
                        <ComboBox Name="TicketTypeComboBox" Width="300" 
                                  FontSize="16" 
                                  Margin="0,10,0,0">
                            <ComboBoxItem Content="Regular"/>
                            <ComboBoxItem Content="Student"/>
                            <ComboBoxItem Content="Senior"/>
                        </ComboBox>

                        <!-- Przycisk rejestracji -->
                        <Button Content="Register" 
                            Width="300" 
                            Height="50" 
                            Background="#1976D2" 
                            Foreground="White" 
                            FontSize="20" 
                            Margin="0,30,0,0"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="RegisterButton_Click"/>  


                        <!-- Link do logowania -->
                        <TextBlock HorizontalAlignment="Center" 
                                   Margin="0,20,0,0" 
                                   FontSize="16">
                            <Run Text="Already have an account? "/>
                            <Run Text="Log in" 
                                 Foreground="#1976D2" 
                                 TextDecorations="Underline" 
                                 Cursor="Hand"
                                 MouseDown="GoToLoginPage"/>
                        </TextBlock>

                        <!-- TextBlock do wyświetlania błędów -->
                        <TextBlock Name="ErrorTextBlock" 
                                   HorizontalAlignment="Center" 
                                   Foreground="Red" 
                                   FontSize="14" 
                                   Margin="0,20,0,0" 
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
